{
  "name": "nextjs-boilerplate",
  "author": "josserden",
  "description": "Next.js boilerplate with TypeScript, Tailwind CSS, ESLint, Prettier, Husky, and more.",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josserden/nextjs-boilerplate"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "eslint",
    "prettier",
    "husky",
    "boilerplate"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "types": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "test-all": "npm run format && npm run lint && npm run types && npm run build && npm run test",
    "prepare": "husky install",
    "test": "jest --coverage",
    "test:w": "jest --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "autoprefixer": "10.4.15",
    "clsx": "^2.0.0",
    "next": "^14.0.3",
    "postcss": "8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-use": "^17.4.2",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "3.3.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hookform/devtools": "^4.3.1",
    "@next/eslint-plugin-next": "^14.0.3",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "typescript": "^5.2.2"
  }
}
